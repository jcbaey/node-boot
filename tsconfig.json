{
  "ts-node": {
    "files": true, // Mandatory to support external types like global.d.ts
    "transpileOnly": true,
    "experimentalResolver": true
  }, 
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "module": "node16",
    "rootDir": "src",
    "outDir": "build",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": false // ESM doesn't yet support JSON modules.
  }
}